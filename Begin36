#include <iostream>
using namespace std;

int main() {
    double v1, v2, s, t; 

    cout << "Введите скорость первого автомобиля (км/ч): ";
    cin >> v1;
    cout << "Введите скорость второго автомобиля (км/ч): ";
    cin >> v2;
    cout << "Введите расстояние между автомобилями (км): ";
    cin >> s;
    cout << "Введите время движения (ч): ";
    cin >> t;

    double stotal = s + t * (v1/3.6 + v2); 
    cout << "Расстояние между автомобилями через " << t << " часов: " << stotal << " км";

    return 0;
}
